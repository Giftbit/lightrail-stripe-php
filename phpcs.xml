<?xml version="1.0"?>
<ruleset name="PSR2LaxLineLength">
    <description>PSR2 for people for normal monitors</description>

    <!-- Include the whole PSR2 standard -->
    <rule ref="PSR2"/>

    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="9999999"/>
            <property name="absoluteLineLimit" value="9999999"/>
        </properties>
    </rule>
</ruleset>
